@model Profissional.Models.AddProfissionalViewModel
@{
}
<h1>Adicionar Profissional</h1>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Telefone</label>
        <input type="text" class="form-control" asp-for="Tel">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">RG</label>
        <input type="text" class="form-control" asp-for="RG">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Endereço</label>
        <input type="text" class="form-control" asp-for="Adress">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Salario</label>
        <input type="number" class="form-control" asp-for="Salary">
    </div>
    
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
